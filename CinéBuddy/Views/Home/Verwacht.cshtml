<link href="~/Content/FilmStyle.css" rel="stylesheet" />
@model CinéBuddy.Models.Films

@{
    ViewBag.Title = "Verwacht";
}

<h2>Verwacht</h2>
@foreach (var a in ViewBag.AlleFilms)
{
    if (a.openingsDatum > DateTime.Now)
    {
        <a href='@Url.Action("Details", "Home", new { id = a.ID })'>
            <img class="poster" src="@Url.Content(a.poster)" />
        </a>
    }
}
